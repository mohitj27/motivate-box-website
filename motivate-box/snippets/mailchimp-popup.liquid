<style>
  
  .social-icon{
    font-size:40px;
  }
  .fancybox-inner{
    overflow:hidden !important;
    background-color:white;
    color:black;
    font-weight:bolder;
  }
  .main-header-newsletter{
      font-size:70px;
      text-align:center;
    }
  @media screen and (max-width:535px) {
    .main-header-newsletter{
      font-size:30px;
    }
  }
  
 
  
</style>



{% if settings.show_mailchip_popup %}
<div id="mailchimp-popup" style="display:none;height:inherit;" data-expires="{{settings.mailchip_popup_expires}}">
  <div style="height:inherit">
    <div class="col-md-12 main-header-newsletter">
          <p style="margin:0.4em 0;">GET 10% OFF</p>
    </div>
    <div class="col-md-12">
       {% if settings.mailchip_popup_bg %}
    <div class="mailchimp-popup-img">
      <img alt="" src="{{'mailchip_popup_bg.jpg' | asset_url}}" />
    </div>
    {% endif %}

    <div class="mailchimp-popup-content" style="padding:0px 0px 0px;">
      {% if settings.mailchip_popup_heading != blank %}
      <h4 class="title" style="color:black;">{{settings.mailchip_popup_heading}}</h4>
      {% endif %}

      {% if settings.mailchip_popup_content_1 != blank %}
      <div class="mailchimp-caption-1">
        <span>{{settings.mailchip_popup_content_1}}</span>
      </div>
      {% endif %}

      <form id="mc-form" action="{{ settings.mailchip_popup_action }}" method="post" name="mc-embedded-subscribe-form">
        <input id="mc-email" style="width:100%;" class="input-block-level" type="email" name="EMAIL" placeholder="{{ settings.mailchip_popup_placeholder }}" required />
        <br/><br/>
        <button class="btn-3" style="float:right;" type="submit">Yeah, Count me in !</button>

      </form>
  <br/><br/>

      {% if settings.mailchip_popup_content_2 != blank %}
      <div class="mailchimp-caption-2" style="text-align:center;">
        <span>{{settings.mailchip_popup_content_2}}</span>
      </div>
      {% endif %}

      <center>

      {% if settings.mailchip_popup_social_show %}
      <div class="social-sharing" style="font-size:40px;">
        {% if settings.social_icons_facebook_show %}
        <a target="_blank" href="{{ settings.social_icons_facebook_link }}" class="share facebook" title="Facebook">
          <span class="social-icon">
            <i class="fa fa-facebook-square"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_twitter_show %}
        <a target="_blank" href="{{ settings.social_icons_twitter_link }}" class="share twitter" title="Twitter">
          <span class="social-icon">
            <i class="fa fa-twitter"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_youtube_show %}
        <a target="_blank" href="{{ settings.social_icons_youtube_link }}" class="share youtube" title="Youtube">
          <span class="social-icon">
            <i class="fa fa-youtube-play"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_tumblr_show %}
        <a target="_blank" href="{{ settings.social_icons_tumblr_link }}" class="share tumblr" title="Tumblr">
          <span class="social-icon">
            <i class="fa fa-tumblr-square"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_google_show %}
        <a target="_blank" href="{{ settings.social_icons_google_link }}" class="share google" title="Google">
          <span class="social-icon">
            <i class="fa fa-google-plus-square"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_pinterest_show %}
        <a target="_blank" href="{{ settings.social_icons_pinterest_link }}" class="share pinterest" title="Pinterest">
          <span class="social-icon">
            <i class="fa fa-pinterest-square"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_instagram_show %}
        <a target="_blank" href="{{ settings.social_icons_instagram_link }}" class="share instagram" title="Instagram">
          <span class="social-icon">
            <i class="fa fa-instagram"></i>
          </span>
        </a>
        {% endif %}

        {% if settings.social_icons_rss_show %}
        <a target="_blank" href="{{ settings.social_icons_rss_link }}" class="share rss" title="Rss">
          <span class="social-icon">
            <i class="fa fa-rss-square"></i>
          </span>
        </a>
        {% endif %}
      </div>
      {% endif %}

      </center>

    </div>
    </div>
  </div>
</div>

{{ 'jquery.cookie.js' | asset_url | script_tag }}

{% endif %}
